<div class = "container" id = "container-fix">
  <div class="row" id="<%= review.id %>">
    <div class="col-sm-12 list-review-<%= review.id%>">
      <hr/>
      <div class="review-block">
        <div class="col-sm-12">
          <img src="http://dummyimage.com/60x60/666/ffffff&text=No+Image" class="img-rounded">
          <div class="review-block-name">
            <p><%= review.name %></p>
          </div>
          <div class="review-block-date">
            <%= l review.created_at, format: :short %>
          </div>
        </div>
        <div class="col-sm-9" id=  "col-sm-9">
          <div class="review-block-rate rating">
            <% i = 1 %>
            <% while i <= review.rate do %>
              <button type="button" class="btn btn-warning btn-sm" aria-label="Left Align">
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
              </button>
              <% i += 1 %>
            <% end %>
            <% while i <= 5 do %>
              <button type="button" class="btn btn-default btn-grey btn-sm" aria-label="Left Align">
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
              </button>
              <% i += 1 %>
            <% end %>
          </div>
          <h4>
            <div class="review-block-title">
              <%= review.title %>
            </div>
          </h4>
          <h5>
            <div class="review-block-description">
              <%= review.content %>
            </div>
          </h5>
          <% if logged_in? %>
            <% if review.user_id == current_user.id %>
              <div>
                <%= link_to "Edit", edit_book_review_path(review.book, review), class: "btn btn-primary" %>
                <%= link_to "Delete", book_review_path(review.book, review),class: "btn btn-labeled btn-danger", remote: true, method: :delete, data: {confirm: "Are you sure?"} %>
              </div>
            <% end %>
          <% end %>
        </div>
        <hr/>
      </div>
    </div>
  </div>
</div>
